<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#696969"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="POTHOLE AHEAD"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Pothole?"
        android:layout_marginTop="110dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="197dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="A Pothole is a depression un a road surface usually asphalt pavement,where traffic has remov ed broken pieces of the pavement.It is usually the result of water in the underlying soil structure and traffic passing over the affected area"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/logout"
        android:layout_width="310dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:onClick="Lets"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_bg"
        android:text="LETS GET STARTED"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="51dp" />
</LinearLayout>